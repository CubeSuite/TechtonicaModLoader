<UserControl x:Class="TechtonicaModLoader.Controls.GlowBorder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TechtonicaModLoader.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="{DynamicResource dimBackgroundBrush}" BorderBrush="{DynamicResource accentBrush}"
                BorderThickness="2" CornerRadius="{DynamicResource borderCorners}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="40" ShadowDepth="0" Color="{DynamicResource accentColour}" RenderingBias="Performance"/>
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>

<UserControl x:Class="TechtonicaModLoader.MyPanels.NewModsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TechtonicaModLoader.MyPanels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
                          Loaded="OnPanelLoaded">
    <Grid>
        <ScrollViewer>
            <StackPanel x:Name="modsPanel">
                <Label x:Name="infoLabel" Content="Loading, Please Wait..." Style="{DynamicResource titleStyle}" FontSize="16" Margin="5,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
